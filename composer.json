{
    "name": "vda/mvc",
    "type": "library",
    "description": "MVC",
    "keywords": ["mvc"],
    "repositories": [
        {
            "type": "composer",
            "url": "https://composer.vda-team.com/",
            "options": {
                "ssl": {
                    "verify_peer": false
                }
            }
        }
    ],
    "require": {
        "php": ">=5.6",
        "vda/application": "0.12.*",
        "vda/http": "0.11.*|0.12.*",
        "twig/twig": "~1.0|~2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*"
    },
    "autoload": {
        "psr-4": {
            "Vda\\Mvc\\": "src"
        }
    }
}
